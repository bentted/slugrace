<RedButton@Button>:
    background_color: .8, 0, 0, 1
    color:1, .8, .1, 1
    bold:True
    font_size: 18
    size_hint:(None,None)
    size:200, 40
    pos_hint:{'center_x': 0.5}
<RegularLabel@Label>:
    color: .2, .1, 0, 1
    text_size: self.size
    halign: 'left'
    valign: 'center'
<TitleLabel@RegularLabel>:
    font_size: 20
    size_hint: (1, None)
    height: 30
<Regular80x30Label@RegularLabel>:
    size_hint:(None, None)
    size: 80, 30
<DollarLabel@RegularLabel>:
    text: '$'
    size_hint: (None,None)
    size: 20,30
<NameInput@TextInput>:
    multiline: False
    size_hint:(None,None)
    size: 400,30
<NumInput@TextInput>:
    multiline: False
    size_hint: (None,None)
    size: 250, 30
<PlayerRadioButton@CheckBox>:
    canvas.before:
        Color:
            rgba:0,0,0,1
        Ellipse:
            pos:self.center_x-10, self.center_y-10
            size:[20,20]
    group:'players'
    size_hint: (.5, 1)
<ConditionRadioButton@CheckBox>:
    canvas.before:
        Color:
            rgba:0,0,0,1
        Ellipse:
            pos:self.center_x-10, self.center_y-10
            size:[20,20]
    group: 'conditions'
    size_hint_x: .05
<BoldLabel@RegularLabel>:
    bold:True
<PlayerSlugButton@CheckBox>:
    canvas.before:
        Color:
            rgba:0,0,0,1
        Ellipse:
            pos:self.center_x-10, self.center_y-10
            size:[20,20]
    size_hint:(.5,1)
<BetInput@NumInput>:
    width:120
    pos_hint:{'center_y':.5}
<BetsScreen>:
    canvas:
        Color:
            rgba: 1, 1, .8, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    padding:10
    spacing:10
    BoldLabel:
        text:'Bets'
        size_hint:(1, None)
        height: 30
    BoxLayout:
        orientation: 'vertical'
        #player1
        BoxLayout:
            spacing: 10
            RegularLabel:
                text:'Player 1'
            RegularLabel:
                text:'bets'
                size_hint:(.4,1)
            BoxLayout:
                spacing: 5
                DollarLabel:
                    halign: 'right'
                    size_hint:(1,1)
                BetInput:
                    text:'1000'
            Slider:
                min:1
                max:1000
                value:2000
                step:1
            RegularLabel:
                text:'on'
                size_hint:(.3,1)
            BoxLayout:
