<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text:'Settings'
            font_size:28
        Label:
            text: 'The Players'
        BoxLayout:
            BoxLayout:
                CheckBox:
                    group: 'players'
                Label:
                    text:'1 players'
            BoxLayout:
                CheckBox:
                    group: 'players'
                Label:
                    text:'2 players'
            BoxLayout:
                CheckBox:
                    group: 'players'
                Label:
                    text:'3 players'
            BoxLayout:
                CheckBox:
                    group: 'players'
                Label:
                    text:'4 players'
        Label:
            text:'Player Name and Initial Money Setup'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                Label:
                    text:''
                Label:
                    text:'Name'
                Label:
                    text:'Initial Money'
            BoxLayout:
                Label:
                    text:'Player 1'
                TextInput:
                    multiline: False
                BoxLayout:
                    Label:
                        text:''
                    Label:
                        text:'$'
                    TextInput:
                        multiline: False
            BoxLayout:
                Label:
                    text:'Player 2'
                TextInput:
                    multiline: False
                BoxLayout:
                    Label:
                        text:''
                    Label:
                        text:'$'
                    TextInput:
                        multiline: False
            BoxLayout:
                Label:
                    text:'Player 3'
                TextInput:
                    multiline: False
                    hint_text: 'Enter Name'
                BoxLayout:
                    Label:
                        text:''
                    Label:
                        text:'$'
                    TextInput:
                        multiline: False
            BoxLayout:
                Label:
                    text:'Player 4'
                TextInput:
                    multiline: False
                BoxLayout:
                    Label:
                        text:''
                    Label:
                        text:'$'
                    TextInput:
                        multiline: False
        BoxLayout:
            orientation: 'vertical'
            Label:
                text:'Ending Condition'
            GridLayout:
                rows:3
                CheckBox:
                    group: 'conditions'
                BoxLayout:
                    Label:
                        text:'The game is over when there is only one player with any money left.'
                CheckBox:
                    group:'conditions'
                BoxLayout:
                    Label:
                        text:'The game is over noy lster than after a given number of races.'
                    TextInput:
                        multiline: False
                CheckBox:
                    group: 'conditions'
                BoxLayout:
                    Label:
                        text:'The game is over not later than the total racing time has elapsed.'
                    TextInput:
                        multiline: False
        Button:
            text:'Ready'
