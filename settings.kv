<RegularLabel@Label>:
    text_size: self.size
    halign: 'left'
    valign: 'center'
<TitleLabel@RegularLabel>:
    font_size: 20
    size_hint: (1, None)
    height: 30
<Regular80x30Label@RegularLabel>:
    size_hint:(None, None)
    size: 80, 30
<DollarLabel@RegularLabel>:
    text: '$'
    size_hint: (None,None)
    size: 20,30
<NameInput@TextInput>:
    multiline: False
    size_hint:(None,None)
    size: 400,30
<NumInput@TextInput>:
    multiline: False
    size_hint: (None,None)
    size: 250, 30
<PlayerRadioButton@CheckBox>:
    group:'players'
    size_hint: (.5, 1)
<ConditionRadioButton@CheckBox>:
    group: 'conditions'
    size_hint_x: .05
<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding:10
        spacing:10
        TitleLabel:
            text:'Settings'
            font_size:28
        TitleLabel:
            text: 'The Players'
        BoxLayout:
            size_hint:(.4, None)
            height: 50
            BoxLayout:
                PlayerRadioButton:
                RegularLabel:
                    text:'1 players'
            BoxLayout:
                PlayerRadioButton:
                RegularLabel:
                    text:'2 players'
            BoxLayout:
                PlayerRadioButton:
                RegularLabel:
                    text:'3 players'
            BoxLayout:
                PlayerRadioButton:
                RegularLabel:
                    text:'4 players'
        Label:
            text:'Player Name and Initial Money Setup'
            text_size: self.size
            halign: 'left'
            valign: 'center'
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10
            BoxLayout:
                RegularLabel:
                    text:''
                    size_hint_x: None
                    width: 80
                RegularLabel:
                    text:'Name'
                    size_hint_x: None
                    width: 700
                RegularLabel:
                    text:'Initial Money'
            BoxLayout:
                Regular80x30Label:
                    text:'Player 1'
                NameInput:
                BoxLayout:
                    RegularLabel:
                        text:''
                        size_hint_x:None
                        width: 280
                    DollarLabel:
                    NumInput:
            BoxLayout:
                Regular80x30Label:
                    text:'Player 2'
                NameInput:
                BoxLayout:
                    RegularLabel:
                        text:''
                        size_hint_x:None
                        width: 280
                    DollarLabel:
                    NumInput:
                        multiline: False
                        size_hint:(None, None)
                        size: 250, 30
            BoxLayout:
                Regular80x30Label:
                    text:'Player 3'
                NameInput:
                BoxLayout:
                    RegularLabel:
                        text:''
                        size_hint_x:None
                        width: 280
                    DollarLabel:
                    NumInput:
            BoxLayout:
                Regular80x30Label:
                    text:'Player 4'
                NameInput:
                BoxLayout:
                    RegularLabel:
                        text:''
                        size_hint_x:None
                        width: 280
                    DollarLabel:
                    NumInput:
        BoxLayout:
            orientation: 'vertical'
            padding:10
            spacing:10
            TitleLabel:
                text:'Ending Condition'
            GridLayout:
                rows:3
                spacing:10
                ConditionRadioButton:
                BoxLayout:
                    RegularLabel:
                        text:'The game is over when there is only one player with any money left.'
                ConditionRadioButton:
                BoxLayout:
                    RegularLabel:
                        text:'The game is over not lster than after a given number of races.'
                    TextInput:
                        multiline: False
                        size_hint:(None, None)
                        size: 250, 30
                ConditionRadioButton:
                BoxLayout:
                    RegularLabel:
                        text:'The game is over not later than the total racing time has elapsed.'
                    TextInput:
                        multiline: False
                        size_hint:(None, None)
                        size: 250, 30
        Button:
            text:'Ready'
            size_hint:(None, None)
            size:200,40
            pos_hint:{'center_x':0.5}
